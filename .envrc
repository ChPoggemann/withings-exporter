# VS Code + Zsh + direnv friendly .envrc

# Activate virtual environment manually, but suppress prompt modification
export VIRTUAL_ENV_DISABLE_PROMPT=1

# Activate the venv (uv or standard)
if [[ -f .venv/bin/activate ]]; then
  source .venv/bin/activate
fi

# Set a consistent prompt label (customizable!)
export VIRTUAL_ENV_PROMPT="($(basename "$PWD")) "

# In VS Code the direnv plugin needs to be installed, otherwise 
# the VIRTUAL_ENV variables aren't removed on direnv unload.
# https://marketplace.visualstudio.com/items?itemName=mkhl.direnv